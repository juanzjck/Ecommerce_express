extends layoutAdmin

block content
    h1= 'Editar semilla'
    a(href='http://localhost:3000/all_users')='regresar'
    form(action=urlDelete,method='post')
        div(data-role='fieldcontain')   
           input(type='submit',value='Eliminar',data-transition='fade', data-theme='c')
    form(action=url,method='post', class="form-horizontal")
        div(class="form-group")
            label(class="form-label" for="input-example-1") Name
        div(class="col-9 col-sm-12")
            input(class="form-input" value=name name="name" type="text" id="input-example-1" placeholder="Name")
        div(class="form-group")
            label(class="form-label"  for="input-example-1") price
        div(class="col-9 col-sm-12")
            input(class="form-input" value=price name="price" type="text" id="input-example-1" placeholder="price")
        div(class="form-group")
            label(class="form-label" for="input-example-1") Quantity
        div(class="col-9 col-sm-12")
            input(class="form-input" value=quantity name="quantity" type="text" id="input-example-1" placeholder="Quantity")
        div(class="col-9 col-sm-12")
             a( class="btn btn-primary" href="#add_category") Agregar categoria
           table(class="table")
                thead
                    tr
                     th Categorias
                tbody
                    each val, index in categories
                        tr
                         td=val.category
                            a(class="btn btn-primary", href="http://localhost:3000/deleteCategory_seed/"+_id+"/"+val._id) Eliminar
        div(class="col-9 col-sm-12",style="padding:10px;")
            button(class="btn btn-success", type='submit' )  Guardar
    div(class="modal" id="add_category")
        a(href="#close" class="modal-overlay" aria-label="Close")
        div(class="modal-container")
            div(class="modal-header")
                a(href="#close" class="btn btn-clear float-right" aria-label="Close")
                div(class="modal-title h5") Agregar category
            div(class="modal-body")
                div(class="content")
                    form(action="http://localhost:3000/addCategory_seed/"+_id,method='post')
                        select(name="category")
                            each val, index in allCategories
                                option(value=val._id)=val.category
                        button(class="btn btn-primary") Agregar
            div(class="modal-footer")



      