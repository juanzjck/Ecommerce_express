extends layout

block content
  h1= 'Crear nuevo usuario'
  a(href='http://localhost:3000/all_users')='regresar'
  if(errors)
    each val, index in errors
      h3#red=val
  form(action="new_user",method='post')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='firstName') Primer Nombre
           input(id='firstName',type='text',value='',placeholder='',name='firstName')
           div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='secondName') Segundo Nombre
           input(id='secondName',type='text',value='',placeholder='',name='secondName')
      fieldset(data-role='controlgroup')
        label(for='lastName') Apellido
           input(id='lastName',type='text',value='',placeholder='',name='lastName')
     fieldset(data-role='controlgroup')
        label(for='dni') CEDULA
           input(id='dni',type='text',value='',placeholder='',name='dni')
     fieldset(data-role='controlgroup')
        label(for='telefono') Telefono
           input(id='telefono',type='text',value='',placeholder='',name='telefono')
    div(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='email') Correo
           input(id='email',type='text',value='',placeholder='@',name='email')
    div#passworddiv(data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='password') Contraseña
           input(id='password',type='password',value='',placeholder='',name='password')
    div(id='hiddendiv',data-role='fieldcontain')
      fieldset(data-role='controlgroup')
        label(for='password2') Repetir contraseña
           input(id='password2',type='password',value='',placeholder='',name='password2')
    div(data-role='fieldcontain')   
      input(type='submit',value='Registrar nuevo usuario',data-transition='fade', data-theme='c')


