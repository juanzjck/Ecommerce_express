extends layoutAdmin

block content
    h1= 'Editar semilla'
    a(href='http://localhost:3000/all_orders')='regresar'
    form(action='http://localhost:3000/delete_order/'+_id,method='post')
        div(data-role='fieldcontain')   
           input(type='submit',value='Eliminar',data-transition='fade', data-theme='c')
    form(action='http://localhost:3000/edit_order/'+_id,method='post', class="form-horizontal")
        div(class="form-group")
            label(class="form-label" for="input-example-1") Publicacion
        div(class="col-9 col-sm-12")
            strong=publication.titulo
        div(class="form-group")
            label(class="form-label" for="input-example-1") Seed
        div(class="col-9 col-sm-12")
            strong=seed.name
        div(class="form-group")
            label(class="form-label" for="input-example-1") Total Semillas
        div(class="col-9 col-sm-12")
            strong=seedAmount
        div(class="form-group")
            label(class="form-label" for="input-example-1") Total
        div(class="col-9 col-sm-12")
            strong=bill.total
        div(class="form-group")
            label(class="form-label" for="input-example-1") Estado
        div(class="col-9 col-sm-12")
            strong=orderState
        div(class="form-group")
            label(class="form-label" for="input-example-1") Fecha
        div(class="col-9 col-sm-12")
            strong=date
        div(class="col-9 col-sm-12",style="padding:10px;")
            button(class="btn btn-success", type='submit' )  Guardar




      