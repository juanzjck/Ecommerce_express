extends layout

block content
 div(class="form-group login_container")
   h1 Login
   if(errors)
    each val, index in errors
      h3#red=val
   p.lead
     | Sign in with your account. Donâ€™t have one?
     a(href='/register')  Register Now.
     form(role='form', action='/login', method='post')
       .form-group
         label(for='username',class="form-label") Username
         input.form-control(type='text', id='email', name='email', placeholder='enter a email')
       .form-group
         label(for='password', class="form-label") Password
         input.form-control(type='password', id='password', name='password', placeholder='enter a password')
       button.btn.btn-primary(type='submit') Submit
       &nbsp;
       a.btn.btn-default(role='button', href='/') Cancel